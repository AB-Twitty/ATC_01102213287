@model SortingLinkModel

<a controller="Events"
   action="DashboardList"
   page="1"
   route-params="@(new Dictionary<string, string?>
    {
        { "sort", Model.Sort },
        { "dir", Model.IsActive && Model.SortDir == "asc" ? "desc" : "asc" }
    }.Union(Model.RouteParams).ToDictionary())"
   class="ms-2 @(Model.IsActive ? "" : "text-muted")">
    @if (Model.IsActive)
    {
        <i class="fa @(Model.SortDir=="asc" ? "fa-sort-up" : "fa-sort-down")"></i>
    }
    else
    {
        <i class="fa fa-sort"></i>
    }
</a>